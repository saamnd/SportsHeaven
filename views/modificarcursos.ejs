<!DOCTYPE html>
<html>
    <head>
        <title>SportsHeaven</title>
        <meta charset="utf-8" />
        <link rel="stylesheet" type="text/css" href="/estilos/index.css">    
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>
    <body class="container">
        <%- include('header') %>
        <h2>Modificar Curso</h2>
        <form method="post" action="/cursos/modificar">
        <input type="hidden" name="cursos_id" value="<%= cursos.id %>" /> 
            <div class="mb-2">   
                <label class="form-label">Curso:</label>
            </div>
            <div>
                <label class="form-label">Nombre:</label>
                <input name="partida_duracion" type="number" class="form-control" value="<%= cursos.nombre %>"/>
            </div>
            <div>
                <label class="form-label">Deporte:</label>
                <input name="partida_equipoA" type="text" class="form-control" value="<%= cursos.deporte %>"/>
            </div>
            <div>
                <label class="form-label">Precio:</label>
                <input name="partida_equipoB" type="text" class="form-control" value="<%= cursos.precio %>"/>
            </div>
            <div>
                <label class="form-label">Descripci√≥n:</label>
                <input name="partida_factorA" type="text" class="form-control" value="<%= cursos.descripcion %>"/>
            </div>
        
            <button type="submit" class="btn btn-success">Guardar</button>
            <a id= "btnRegresar" class="btn btn-primary">Cancelar</a>
        <%- include('footer') %>
        <script  src="/js/regresar.js"></script>  
    </body>
</html>