<!DOCTYPE html>
<html>
    <head>
        <title>Sports Heaven</title>
        <meta charset="utf-8" />
        <link rel="shortcut icon" href="/imagenes/logo.png" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>
    <body class="">
        <%- include('header') %>

    <div method="post" class="container">
      <div>
          <center><h1>Cursos</h1></center>
          <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active" data-bs-interval="3500">
                <img src="/icons/futbol.jpg" class="d-block w-100" style="width: 100px; height: 300px" alt="...">
              </div>
              <div class="carousel-item" data-bs-interval="3000">
                <img src="/icons/basket.jpg" class="d-block w-100" style="width: 10px; height: 300px" alt="...">
              </div>
              <div class="carousel-item" data-bs-interval="3000">
                <img src="/icons/voley.jpg" class="d-block w-100" style="width: 100px; height: 300px" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/icons/pingpong.jpg" class="d-block w-100" style="width: 100px; height: 300px" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          <div class="mb-3 mt-3">
              <nav class="navbar bg-light">
                  <div class="container-fluid">
                    <a class="btn btn-success" href="cursos">Crear curso</a>
                  </div>
                </nav>
        </div>
        <table class="table table-hover">
          <thead>
              <tr>
                  <th>Id</th>
                  <th>Nombre</th>
                  <th>Deporte</th>
                  <th>Descripcion</th>
                  <th>Precio</th>
                  <th>Calificacion</th>
                  <th>Acciones</th>

              </tr>
          </thead>
          <tbody>
              <% cursos.forEach( (curso) => { %>
                  <tr>
                      <td><%= curso.id %></td>
                      <td><%= curso.nombre %></td>
                      <td><%= curso.deporte%></td>
                      <td><%= curso.descripcion%></td>
                      <td><%= curso.precio%></td>
                      <td><%= curso.calificacion%></td>
                      <td>
                          <a class="btn btn-success" href="/modificarcursos">Modificar curso</a>
                          <a class="btn btn-success" href="/listacurso/eliminar/<%= curso.id %>">Eliminar curso</a>
                      </td>
                  </tr>
              <% }) %>
          </tbody>
      </table>
    </div>
    
        <%- include('footer')%>
    </body>
</html>