    <body class="">
        <%- include('header')  %>

        <div class="container">
            <h2>Escoge el tipo de usuario:</h2>
            <form method="post" action="/regTipoUsuario">
                <div class="mt-3">
                  <div  class="form-check">
                    <input value="profe" class="form-check-input" type="radio" name="nrol" id="flexRadioDefault2" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                      Profesor
                    </label>
                  </div>
                  <div class="form-check">
                    <input value="alumno" class="form-check-input" type="radio" name="nrol" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                      Alumno
                    </label>
                  </div>
                </div>
                <div class="mt-5"><button type="submit" class="btn btn-dark ">Siguiente</button></div>
            </form>
        </div>
        
        <%- include('footer') %>
    </body>
